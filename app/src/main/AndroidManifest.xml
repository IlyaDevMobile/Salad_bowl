<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    
    <application
        android:name=".cleancode.application.di.app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_splash_screen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash_screen_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SaladBowl"
        tools:targetApi="31">
        <activity
            android:name=".cleancode.application.presentation.recipeInfo.RecipeDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"

            />
        <activity
            android:name=".cleancode.application.presentation.createNewRecipe.CreateRecipeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"

            />
        <activity
            android:name=".cleancode.application.presentation.listRecipe.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"

            />
        <activity
            android:name=".cleancode.application.presentation.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>